{
  "name": "task-cli",
  "version": "1.0.0",
  "description": "A professional command-line task management tool built with TypeScript, featuring comprehensive testing and code quality tools",
  "main": "dist/index.js",
  "bin": {
    "task": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:server": "ts-node src/server.ts",
    "server": "node dist/server.js",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run format:check && npm run type-check",
    "prepush": "npm run test"
  },
  "keywords": [
    "cli",
    "task",
    "todo",
    "typescript",
    "productivity",
    "task-management"
  ],
  "author": "fumi0428",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fumi0428/task-cli.git"
  },
  "bugs": {
    "url": "https://github.com/fumi0428/task-cli/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  }
}
